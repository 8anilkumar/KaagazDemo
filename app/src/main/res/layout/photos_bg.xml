<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d_10dp"
    app:cardCornerRadius="@dimen/d_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/d_40dp"
            android:layout_height="@dimen/d_40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/d_10dp"
            android:layout_marginEnd="@dimen/d_10dp"
            android:src="@drawable/ic_cancel"
            android:elevation="@dimen/d_10dp"
            app:tint="@color/teal_200"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_margin="@dimen/d_10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>