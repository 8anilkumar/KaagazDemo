<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/d_10dp"
    android:layout_margin="@dimen/d_5dp">

    <RelativeLayout
        android:layout_width="@dimen/d_80dp"
        android:layout_height="@dimen/d_90dp">

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/d_25dp"
            android:layout_height="@dimen/d_25dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_cancel"
            android:elevation="@dimen/d_10dp"
            app:tint="@color/teal_200"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/d_80dp"
            android:layout_height="@dimen/d_90dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_account" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>